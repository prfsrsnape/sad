        let embed = new MessageEmbed()
        .setColor('#e42643')
        .setTitle('bi rol al')
        .setDescription('rol alıyorsun\n\n'
        + `sarı rolü almak için ${sarıemoji} bas`
        + `mavi rolü almak için ${maviemoji} bas`);

    let messageEmbed = await message.channel.send(embed);
    messageEmbed.react(sarıemoji);
    messageEmbed.react(maviemoji);

    client.on('messageReactionAdd', async (reaction, user) => {
        if(reaction.message.partial) await reaction.message.fetch();
        if(reaction.partial) await reaction.fetch();
        if(user.bot) return;
        if(!reaction.message.guild) return;

        if(reaction.message.channel.id == channel) {
            if(reaction.emoji.name === sarıemoji) {
                await reaction.message.guild.members.cache.get(user.id).roles.add(sarıemoji);
            }
            if(reaction.emoji.name === maviemoji) {
                await reaction.message.guild.members.cache.get(user.id).roles.add(maviemoji);
            }
        } else {
            return;
        }
    }); 

    client.on('messageReactionRemove', async (reaction, user) => {
       
        if(reaction.message.partial) await reaction.message.fetch();
        if(reaction.partial) await reaction.fetch();
        if(user.bot) return;
        if(!reaction.message.guild) return;

        if(reaction.message.channel.id == channel) {
            if(reaction.emoji.name === sarıemoji) {
                await reaction.message.guild.members.cache.get(user.id).roles.remove(sarıemoji);
            }
            if(reaction.emoji.name === maviemoji) {
                await reaction.message.guild.members.cache.get(user.id).roles.remove(maviemoji);
            }
        } else {
            return;
        }
    });
